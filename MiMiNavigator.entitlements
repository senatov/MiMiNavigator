<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
 "http://www.apple.com/DTDs/PropertyList-1.0.dtd">

<plist version="1.0">
<dict>
    <!-- App Sandbox enabled for security -->
    <key>com.apple.security.app-sandbox</key>
    <true/>

    <!-- Allow access to user-selected files via NSOpenPanel -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>

    <!-- Allow access to Downloads folder (used as default path) -->
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>

    <!-- Network access for potential future features (FTP, cloud) -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- Allow security-scoped bookmarks for persistent access -->
    <key>com.apple.security.files.bookmarks.app-scope</key>
    <true/>

</dict>
</plist>
